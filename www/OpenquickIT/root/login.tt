<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html>
 <head>
  <title>Login [% c.config.name %]</title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <link href="/static/img/favicon.ico" rel="shortcut icon" />
  <link href="/static/img/favicon.ico" rel="icon" type="image/x-icon" />
  <style type="text/css">
   body {
      background: #fff;
      color: #444;
   }
   #all {
      line-height: 1.1em;
      margin:  0;
      padding: 0;
      border:  0;
      outline: 0;
      font-weight: inherit;
      font-style:  inherit;
      font-size: 100.1%;
      font-family: sans-serif, monospace;
      text-decoration: none;
      vertical-align: baseline;
   }
   #login_widget {
       display:   auto;
       font-size: 12px;
       height:    auto; /* height can increase */
       margin:    2% auto -1px auto;
       padding:   5px;
       /* top:       60%; */
       width:     300px;
   }
   #login_header h1 {
       line-height: 1.4em;
       text-align:  center;
   }
   #login_body fieldset {
       background:            #fafafa;
       color:                 #444;
       border:                1px solid #dfdfdf;
       border-radius:         6px;
       -moz-border-radius:    6px;
       -webkit-border-radius: 6px;
       padding:               0.4em 3em 1.4em 3em;
   }
   #login_body a         {color:#09f; text-decoration:none;}
   #login_body a:hover   {color:#999;}
   #login_body a:visited {color:#09f; text-decoration:none;}
   #login_body label {
       text-align:  left;
       line-height: 1.4em;
       color:       #666;
   }
   #login_body input {
       margin: 0.3em 0 1em 0;
   }
   #login_body input.input {
       color:       #444;
       font-size:   1.6em;
       padding:     3px 2px;
       width:       95%;
   }
   #login_body input#pass {
       font-weight: bold;
   }
   #login_body input.button {
       clear:  both;
       cursor: pointer;
       float:  right;
       margin: 1em 0;
       padding: 0.3em 1em;
   }
   #form_login p#error_msg {
       color:       #c00;
       font-weight: bold;
       text-align:  center;
   }
   #footer {
       clear:      all;
       color:      #999;
       font-size:  small;
       text-align: center;
       margin:     0px auto;
       max-width:  1280px;
       min-width:  640px;
       width:      90%;
   }
   #footer p {
       line-height: 1em;
       margin: 0.5em;
       text-align:center;
   }
   #footer a         {color:#09f; text-decoration:none;}
   #footer a:hover   {color:#666;}
   #footer a:visited {color:#09f; text-decoration:none;}
  </style>
 </head>
 <body onload="document.getElementById('username').focus();">
  <div id="all">
   <div class="" id="login_widget">
    <div class="" id="login_header">
     <h1>
      <img src="/static/img/logo.png" alt="[% c.config.name %]" />
     </h1>
    </div><!-- #login_header -->
    <div id="login_body">
     <form action="/login" id="form_login" method="post"i name="form_login">
      <fieldset>
      <legend>&nbsp;<a href="/login">New session</a>&nbsp;</legend>
      <!-- Error messages may be show to existing
           sessions.error_msg is a single sort sentence. -->
        <p id="error_msg"><span>[% error_msg %]</span></p><br/>
        <label for="username">Username:</label><br/>
        <input name="username" type="text"
               maxlength="20" value="" class="input" id="username" /><br/>
        <label for="password">Password:</label><br/>
        <input name="password" type="password"
               maxlength="40" value="" class="input" id="password" /><br/>
        <input name="submit" type="submit"
               value="Login" class="button" id="submit" /><br/>
      </fieldset>
     </form>
    </div><!-- #login_form -->
   </div><!-- #login_widget -->
   <div id="footer">
    <p>
     Powered by 
     <a href="[% c.config.apphome %]"
        title="[% c.config.name %]">[% c.config.name %]</a>.
    </p>
   </div><!-- #footer -->
  </div><!-- #all -->
 </body>
</html>
